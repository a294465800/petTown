/* coupon.wxss */

.container {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f9;
}

/*导航  */

.shop-nav {
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  border-top: 2rpx solid #eee;
  position: relative;
  background-color: #fff;
}

.shop-nav-item {
  font-size: 16px;
  flex: 1;
  text-align: center;
}

.shop-nav-item.active {
  color: #ff963d;
}

.shop-nav-item-border {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 6rpx;
  width: 50%;
}

.shop-nav-item-border::after {
  position: absolute;
  content: '';
  height: 100%;
  width: 50%;
  top: 0;
  left: 50%;
  margin-left: -25%;
  background-color: #ff963d;
}

/*
  内容
*/

.swiper-wrap {
  flex: 1;
  position: relative;
  width: 100%;
}

.swiper-wrap swiper {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
}

.swiper-scroll {
  height: 100%;
  width: 100%;
}

/*优惠券*/

.coupon_item {
  width: 94%;
  border: 2rpx solid #ccc;
  box-shadow: 2rpx 2rpx 2rpx #ccc;
  background-color: #fff;
  margin-bottom: 40rpx;
  margin-left: auto;
  margin-right: auto;
  position: relative;
}

.coupon_item_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  position: relative;
}

.coupon_item_top_type {
  flex: 1;
}

.coupon_item_top_type_name {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  text-align: right;
}

.coupon_item_top_type_tip {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  text-align: right;
}

.coupon_item_top_price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6464;
  align-self: flex-start;
  padding-top: 20rpx;
  width: 180rpx;
  margin-right: 10rpx;
}

.coupon_item_top_price_num {
  font-size: 60rpx;
}

.coupon_item_top_circle {
  width: 34rpx;
  height: 70rpx;
  border: 2rpx solid #ccc;
  border-radius: 0 50rpx 50rpx 0;
  position: absolute;
  left: -2rpx;
  bottom: 0;
  border-left: none;
  background-color: #f5f5f9;
}

.coupon_item_bottom {
  width: 100%;
  border-top: 2rpx dashed #eee;
  padding: 10rpx 30rpx;
  color: #999;
  font-size: 26rpx;
}

.coupons_bottom {
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  color: #999;
  margin-top: 20rpx;
}

.coupon_item_lost {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
