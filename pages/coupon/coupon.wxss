/* coupon.wxss */

.container {
  padding: 30rpx;
}

/*优惠券*/

.coupon_item {
  width: 100%;
  border: 2rpx solid #ccc;
  box-shadow: 2rpx 2rpx 2rpx #ccc;
  background-color: #fff;
  margin-bottom: 40rpx;
}

.coupon_item_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  position: relative;
}

.coupon_item_top_type {
  flex: 1;
}

.coupon_item_top_type_name {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  text-align: right;
}

.coupon_item_top_type_tip {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  text-align: right;
}

.coupon_item_top_price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6464;
  align-self: flex-start;
  padding-top: 20rpx;
  width: 180rpx;
  margin-right: 10rpx;
}

.coupon_item_top_price_num {
  font-size: 60rpx;
}

.coupon_item_top_circle {
  width: 34rpx;
  height: 70rpx;
  border: 2rpx solid #ccc;
  border-radius:  0 50rpx 50rpx 0;
  position: absolute;
  left: -2rpx;
  bottom: 0;
  border-left: none;
  background-color: #fff;
}

.coupon_item_bottom {
  width: 100%;
  border-top: 2rpx dashed #eee;
  padding: 10rpx 30rpx;
  color: #999;
  font-size: 26rpx;
}

.coupons_bottom {
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  color: #999;
  margin-top: 20rpx;
}