/* single_buy.wxss */

.container {
  background-color: #f5f5f9;
  padding-bottom: 200rpx;
}

.commodity-item-price {
  font-size: 14px;
  color: #ff6464;
  margin-top: 10rpx;
}

.commodity-item-now-price {
  font-size: 20px;
  margin-right: 20rpx;
}

.commodity-item-pre-price {
  font-size: 13px;
  text-decoration: line-through;
  color: #999;
}

.commodity-item {
  background-color: #fff;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #eee;
}

.commodity-item-content {
  flex: 1;
  padding-left: 20rpx;
}

.commodity-item-img {
  width: 160rpx;
  height: 160rpx;
}

/*
  优惠券
*/
.commodity-coupon {
  width: 100%;
  margin-top: 30rpx;
  background-color: #fff;
}

.commodity-coupon-titile {
  border-bottom: 2rpx solid #eee;
  padding: 20rpx 30rpx;
  word-break: break-all;
  word-wrap: break-word;
}

.commodity-coupon-item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}

.commodity-coupon-item-content {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.commodity-coupon-item-price {
  color: #ff6464;
}

/*
  购买
*/

.commodity-buy {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx 10rpx 20rpx 50rpx;
}

.commodity-buy-btn {
  color: #fff;
  font-size: 16px;
  background-color: #ff6464;
  padding: 20rpx;
}

/*下单页面*/

.buy_interface, .buy_interface_part {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.buy_interface {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  justify-content: center;
}

.buy_interface_img {
  width: 600rpx;
  margin-bottom: 200rpx;
  position: relative;
}

.buy_interface_part {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 180rpx 40rpx 30rpx;
  align-items: center;
}

.buy_interface_title, .buy_interface_name, .buy_interface_order,
.buy_interface_order_time {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.buy_interface_title {
  margin-bottom: 40rpx;
  justify-content: space-between;
  align-self: center;
}

.buy_interface_title icon {
  margin: 0 10rpx;
}

.buy_interface_title text {
  font-size: 42rpx;
  color: #ff6464;
}

.buy_interface_name {
  width: 100%;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
}

.buy_interface_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.buy_interface_price_name {
  color: #ff6464;
}

.buy_interface_order_time {
  justify-content: space-between;
  border: 2rpx solid #50c98e;
  border-radius: 10rpx;
  padding: 6rpx 0;
}

.buy_interface_order_time picker {
  min-width: 110rpx;
  text-align: center;
}

.buy_interface_btn {
  padding: 14rpx 60rpx;
  background-color: #ff6464;
  color: #fff;
  border-radius: 50rpx;
  box-shadow: 6rpx 6rpx 4rpx #ccc;
  align-self: center;
}

.stop_scroll {
  height: 100%;
  overflow: hidden;
}

/*自制picker*/

.buy_interface_time {
  width: 100%;
  height: 600rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: #fff;
}

.buy_interface_time_picker {
  width: 100%;
  height: 500rpx;
  color: #000;
}

.buy_interface_time_btn {
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.buy_interface_time_btn_submit {
  color: green;
}

.buy_interface_time_picker_choose {
  color: #000;
  text-align: center;
  border-top: 2rpx solid green;
  border-bottom: 2rpx solid green;
}

.buy_interface_time_picker_column {
  line-height: 50px;
  text-align: center;
}

.buy_interface_btns {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 0 8%;
}

.cancel {
  background-color: #fff;
  color: #000;
}
