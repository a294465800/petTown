/**index.wxss**/

/*广告  */
.ad-header {
  height: 380rpx;
  width: 100%;
}

.ad-header-img {
  width: 100%;
  height: 100%;
}

/*搜索框  */
.index-search {
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 30rpx auto 0;
  border: 1px solid #ccc;
  background-color: rgba(255, 255, 255, .7);
  border-radius: 50rpx;
  padding: 0 50rpx;
  color: #a8a8a8;
}

.index-search icon {
  margin-right: 30rpx;
}