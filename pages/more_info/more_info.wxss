/* more_info.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
}

/*logo*/

.pettown_logo {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 1px solid #ececec;
  margin-bottom: 30rpx;
}

.pettown_title {
  font-weight: bold;
  padding: 0 30rpx 10rpx;
  border-bottom: 2rpx dashed #ccc;
  margin-bottom: 30rpx;
  font-size: 18px;
}

/*宠物镇介绍*/

.pettown_intro {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.pettown_intro_text {
  text-align: justify;
  font-size: 16px;
}

/*公众号*/

.pettown_id {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  width: 100%;
  background-color: #fff;
}

.pettown_id_img {
  width: 16rpx;
  height: 30rpx;
}

/*其他信息*/

.pettown_other_info {
  padding: 20rpx 30rpx;
  width: 100%;
  text-align: left;
}

.pettown_other_info_tel {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.pettown_other_info_tel_img {
  width: 40rpx;
  height: 40rpx;
}

.us_qq {
  position: relative;
  top: 100rpx;
  left: 0;
  text-align:center;
}

.us_qq .info_text {
  color: #ff963d;
}

/*二维码*/

.QRcode_bg, .QRcode {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.QRcode_bg {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  justify-content: center;
}

.QRcode {
  background-color: #fff;
  width: 700rpx;
  height: 750rpx;
  padding-bottom: 70rpx;
  justify-content: space-around;
  position: relative;
}

.QRcode_name {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
}

.QRcode_img {
  width: 480rpx;
  height: 480rpx;
}

.QRcode_close {
  position: absolute;
  left: 50%;
  bottom: -140rpx;
  margin-left: -40rpx;
}

.info_text {
  font-size: 16px;
}
