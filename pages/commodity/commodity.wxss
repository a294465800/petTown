/* commodity.wxss */

.container {
  background-color: #eee;
  padding-bottom: 200rpx;
  min-height: 100%;
  height: auto;
}

/*轮播图*/

.commodity_img {
  width: 100%;
  height: 400rpx;
}

.roll_img {
  width: 100%;
  height: 400rpx;
}

/*商品名字、价格*/

.commodity_info {
  background-color: #fff;
  padding: 30rpx 30rpx;
  margin-bottom: 30rpx;
}

.commodity_name {
  margin-bottom: 10rpx;
  text-align: justify;
  font-size: 16px;
  word-break: break-all;
  word-wrap: break-word;
}

.commodity_price, .commodity_info_sell {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.commodity_price {
  color: #ff963d;
  margin-bottom: 10rpx;
  justify-content: flex-start;
  font-size: 28rpx;
}

.commodity_price_number {
  font-size: 22px;
}

.commodity_price_first {
  margin-left: 30rpx;
  font-size: 14px;
  color: #666;
  text-decoration: line-through;
}

.commodity_info_sell {
  width: 100%;
  justify-content: space-between;
}

.commodity_info_tips, .commodity_info_sellnum {
  font-size: 13px;
  color: #666;
}

.commodity_info_tips {
  text-align: justify;
}

.commodity_info_sellnum {
  align-self: flex-end;
}

.sell_icon {
  margin-right: 10rpx;
}

.current_group_info {
  width: 100%;
  text-align: right;
  font-size: 14px;
  margin-top: 10rpx;
}

/*产品说明，购买须知*/

.commodity_description, .commodity_notes, .commodity_comment, .commodity_group {
  background-color: #fff;
}

.commodity_description, .commodity_notes, .commodity_group {
  margin-bottom: 30rpx;
}

.commodity_description_logo, .commodity_notes_logo, .commodity_comment_logo,
.commodity_group_logo {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding: 20rpx 30rpx;
}

.commodity_icon {
  width: 50rpx;
  height: 50rpx;
}

.commodity_description_title, .commodity_notes_title, .commodity_comment_title {
  margin-left: 20rpx;
  font-weight: bold;
  font-size: 16px;
}

.commodity_notes_info {
  padding: 30rpx;
  text-align: justify;
}

.commodity_description_info {
  padding: 20rpx 30rpx;
}

.commodity_description_info text,.commodity_notes_info text {
  font-size: 16px;
  word-wrap: break-word;
  word-break: break-all;
}


/*用户评论*/

.commodity_comment_more, .commodity_comment_more_btn {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.commodity_comment_more_btn view {
  font-size: 16px;
}

.commodity_comment_more {
  padding: 20rpx 30rpx;
}

.commodity_comment_more_num, .commodity_comment_more_btn view {
  font-size: 13px;
  color: #666;
}

.commodity_comment_more_btn_img {
  width: 20rpx;
  height: 20rpx;
}

/*购买*/

.commodity_buy {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
}

.commodity_buy_btn {
  flex: 1;
  font-size: 14px;
  padding: 10rpx 30rpx;
}

.commodity_buy_btn view {
  color: #fff;
  text-align: center;
}

.buy_bt_price {
  color: #fff;
  font-weight: bold;
  font-size: 18px;
}

.buy_alone {
  background-color: #ff963d;
}

.buy_together {
  background-color: #f87270;
}

.buy_together.disabled {
  background-color: #f99795;
}


/*
  正在拼团
*/

.commodity_group_more_btn {
  text-align: right;
}

.commodity_group_more_btn text {
  margin-right: 10rpx;
  font-size: 13px;
  color: #666;
}

.commodity_group_list {
  padding: 0 30rpx;
}

.commodity_group_item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx dashed #ccc;
}

.commodity_group_info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex: 1;
}

.commodity_group_info_img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  position: relative;
}

.commodity_group_info_img:nth-child(1) {
  left: 0;
  z-index: 2;
}

.commodity_group_info_img:nth-child(2) {
  left: -20rpx;
  z-index: 1;
}

.commodity_group_info_img:nth-child(3) {
  left: -40rpx;
}

.commodity_group_info_time {
  font-size: 14px;
  color: #999;
  flex: 1;
  text-align: right;
  padding-right: 30rpx;
}

.commodity_group_btn {
  background-color: #ff6464;
  color: #fff;
  font-size: 14px;
  padding: 20rpx 30rpx;
  border-radius: 6rpx;
}


/*break  */
.shop_comment_item_bottom {
  word-break: break-all;
  word-wrap: break-word;
}