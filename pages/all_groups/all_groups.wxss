/* all_groups.wxss */

.container {
  min-height: 100%;
  height: auto;
  padding-bottom: 80rpx;
}

.commodity_group_more_btn {
  text-align: right;
}

.commodity_group_more_btn text {
  margin-right: 10rpx;
  font-size: 13px;
  color: #666;
}

.commodity_group_list {
  padding: 0 30rpx;
}

.commodity_group_item {
  padding: 20rpx 0;
  border-bottom: 2rpx dashed #ccc;
}

.commodity_group_info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex: 1;
}

.commodity_group_info_img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 6rpx;
}

.commodity_group_info_time {
  width: 100%;
  font-size: 14px;
  color: #999;
  text-align: left;
  padding-right: 30rpx;
  margin: 10rpx 0;
}

.btn {
  width: 100%;
  text-align: right;
}

.commodity_group_btn {
  background-color: #ff6464;
  color: #fff;
  font-size: 14px;
  padding: 20rpx 30rpx;
  border-radius: 6rpx;
  display: inline-block;
}

.commodity_group_btn.disabled {
  background-color: #f99795;
}