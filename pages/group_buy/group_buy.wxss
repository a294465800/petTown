.container {
  background-color: #f5f5f9;
  padding-bottom: 200rpx;
}

.commodity-item-price {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.commodity-item-price view {
  font-size: 14px;
  color: #ff6464;
}

.commodity-item-number {
  font-size: 14px;
  color: #333 !important;
}

.commodity-item-now-price {
  font-size: 20px;
  margin-right: 20rpx;
}

.commodity-item-pre-price {
  font-size: 13px;
  text-decoration: line-through;
  color: #999;
}

.commodity-item {
  background-color: #fff;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #eee;
}

.commodity-item-content {
  flex: 1;
  padding-left: 20rpx;
}

.commodity-item-img {
  width: 160rpx;
  height: 160rpx;
}

.commodity-item-shop {
  width: 100%;
  padding-top: 10rpx;
  text-align: right;
  font-size: 14px;
  color: #999;
}

/*
  购买
*/

.commodity_buy {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
}

.commodity_buy_btn {
  flex: 1;
  font-size: 14px;
  padding: 10rpx 30rpx;
}

.commodity_buy_btn view {
  color: #fff;
  text-align: center;
}

.buy_bt_price {
  color: #fff;
  font-weight: bold;
  font-size: 18px;
}

.buy_alone {
  background-color: #ff963d;
}

.buy_together {
  background-color: #f87270;
}

.buy_together.disabled {
  background-color: #f99795;
}

/*
  参团人员  
*/

.commodity-group-people {
  background-color: #fff;
  width: 100%;
  margin-top: 40rpx;
}

.commodity-group-title {
  width: 100%;
  text-align: center;
  padding-top: 20rpx;
  font-size: 14px;
  color: #999;
}

.commodity-group-imgs {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
}

.commodity-group-img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

/*
  说明  
*/

.commodity_description, .commodity_notes, .commodity_comment, .commodity_group {
  background-color: #fff;
}

.commodity_description, .commodity_notes, .commodity_group {
  margin-top: 30rpx;
}

.commodity_description_logo, .commodity_notes_logo, .commodity_comment_logo,
.commodity_group_logo {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding: 20rpx 30rpx;
}

.commodity_icon {
  width: 50rpx;
  height: 50rpx;
}

.commodity_description_title, .commodity_notes_title, .commodity_comment_title {
  margin-left: 20rpx;
  font-weight: bold;
  font-size: 16px;
}

.commodity_notes_info {
  padding: 30rpx;
  text-align: justify;
}

.commodity_description_info {
  padding: 20rpx 30rpx;
}

.commodity_description_info text,.commodity_notes_info text {
  font-size: 16px;
  word-wrap: break-word;
  word-break: break-all;
}



